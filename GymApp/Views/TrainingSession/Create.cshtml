@model GymApp.Models.TrainingSession

<h2>Create Training Session</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SessionDate" class="control-label"></label>
        <input asp-for="SessionDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="SessionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrainingId" class="control-label"></label>
        <select asp-for="TrainingId" class="form-control" asp-items="ViewBag.TrainingId"></select>
        <span asp-validation-for="TrainingId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
